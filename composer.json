{
    "name": "laraditz/gkash",
    "description": "Simple laravel package for Gkash Payment Gateway.",
    "keywords": [
        "laraditz",
        "gkash"
    ],
    "homepage": "https://github.com/laraditz/gkash",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Raditz Farhan",
            "email": "raditzfarhan@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Laraditz\\Gkash\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laraditz\\Gkash\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laraditz\\Gkash\\GkashServiceProvider"
            ],
            "aliases": {
                "Gkash": "Laraditz\\Gkash\\GkashFacade"
            }
        }
    }
}
